{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@lumo/*": ["../packages/lumo/src/*"],
      "@proton/*": ["../packages/proton/src/*"],
      "@proton/crypto": ["../packages/proton/src/crypto/index.ts"],
      "@proton/crypto/lib": ["../packages/proton/src/crypto/index.ts"],
      "lodash/isNil": ["./shims/lodash-isNil.ts"],
      "lodash/isEqual": ["./shims/lodash-isEqual.ts"],
      "lodash/isObject": ["./shims/lodash-isObject.ts"],
      "json-stable-stringify": ["./shims/json-stable-stringify.ts"],
      "toposort": ["./shims/toposort.ts"]
    }
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
