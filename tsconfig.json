{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@lumo/*": ["packages/lumo/src/*"],
      "@proton/*": ["packages/proton/src/*"],
      "@proton/crypto": ["packages/proton/src/crypto/index.ts"],
      "@proton/crypto/lib": ["packages/proton/src/crypto/index.ts"],
      "@proton/crypto/lib/*": ["packages/proton/src/crypto/lib/*"],
      "lodash/isNil": ["src/shims/lodash-isNil.ts"],
      "lodash/isEqual": ["src/shims/lodash-isEqual.ts"],
      "lodash/isObject": ["src/shims/lodash-isObject.ts"],
      "json-stable-stringify": ["src/shims/json-stable-stringify.ts"],
      "toposort": ["src/shims/toposort.ts"]
    }
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
