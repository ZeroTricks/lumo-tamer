{
  "name": "lumo-bridge",
  "version": "1.0.0",
  "description": "OpenAI-compatible API bridge for web chatboxes using Playwright",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --check --inspect=0.0.0.0:9229 src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:shell": "docker-compose -f docker-compose.dev.yml exec lumo-bridge-dev /bin/bash",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "keywords": [
    "openai",
    "api",
    "playwright",
    "chatbox",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "p-queue": "^8.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.41.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
